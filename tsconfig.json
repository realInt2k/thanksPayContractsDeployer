{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl" : ".",
    "rootDirs": ["./src", "./scripts", "./test"],
    "paths": {
      "@abis/*": ["abis/*"],
      "@contracts/*": ["contracts/*"],
      "@scripts/*": ["scripts/*"],
      "@test/*": ["test/*"],
    },
  },
  "include": ["./scripts", "./test", "./typechain", "ignore"],
  "files": ["./hardhat.config.ts"]
}
