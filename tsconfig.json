{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl" : "./",
    "rootDirs": ["./"],
    "paths": {
      "@abis/*": ["abis/*"],
      "@contracts/*": ["contracts/*"],
      "@scripts/*": ["scripts/*"],
      "@test/*": ["test/*"],
    }
  },
  "include": ["./scripts", "./test", "./typechain", "scripts/utils", "scripts/deployScripts"],
  "files": ["./hardhat.config.ts"]
}
